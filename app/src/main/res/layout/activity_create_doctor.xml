<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="v1.localhost.drwho.activity.CreateDoctor">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Name"
            android:textColor="#455A64"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvCpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtCpf"
            android:layout_alignBottom="@+id/edtCpf"
            android:layout_alignStart="@+id/tvName"
            android:text="CPF"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCrm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtCrm"
            android:layout_alignBottom="@+id/edtCrm"
            android:layout_alignStart="@+id/tvCpf"
            android:text="CRM"

            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtAddress"
            android:layout_alignBottom="@+id/edtAddress"
            android:layout_alignStart="@+id/tvCrm"
            android:text="Address"

            android:textColor="#455A64"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtPhone"

            android:layout_alignBottom="@+id/edtPhone"
            android:layout_alignStart="@+id/tvAddress"
            android:text="Phone"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtBirthday"
            android:layout_alignBottom="@+id/edtBirthday"
            android:layout_alignStart="@+id/tvPhone"
            android:text="Birthday"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSpecialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtSpecs"
            android:layout_alignStart="@+id/tvBirthday"

            android:layout_below="@+id/edtSpecs"
            android:text="Specialization"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtEmail"
            android:layout_alignBottom="@+id/edtEmail"

            android:layout_alignStart="@+id/tvSpecialization"
            android:text="Email"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtPasswd"
            android:layout_alignBottom="@+id/edtPasswd"
            android:layout_alignStart="@+id/tvEmail"
            android:text="Password"
            android:textColor="#455A64"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/edtName"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignBaseline="@+id/tvName"
            android:layout_alignBottom="@+id/tvName"
            android:layout_toEndOf="@+id/btnCancel" />

        <EditText
            android:id="@+id/edtCpf"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_below="@+id/edtName"
            android:layout_alignStart="@+id/edtName" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_below="@+id/edtCrm"
            android:layout_alignStart="@+id/edtCrm" />

        <EditText
            android:id="@+id/edtCrm"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_below="@+id/edtCpf"
            android:layout_alignStart="@+id/edtCpf" />


        <EditText
            android:id="@+id/edtBirthday"
            android:layout_width="230dp"            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_below="@+id/edtPhone"
            android:layout_alignStart="@+id/edtPhone" />

        <EditText
            android:id="@+id/edtSpecs"
            android:layout_width="230dp"            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtBirthday"
            android:layout_below="@+id/edtBirthday"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="230dp"            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtAddress"
            android:layout_below="@+id/edtAddress"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/edtSpecs"
            android:layout_alignStart="@+id/edtSpecs" />

        <EditText
            android:id="@+id/edtPasswd"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberPassword"
            android:layout_below="@+id/edtEmail"
            android:layout_alignStart="@+id/edtEmail" />


        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="Done"
            android:layout_marginEnd="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/edtPasswd" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tvCpf"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="Cancel" />



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
