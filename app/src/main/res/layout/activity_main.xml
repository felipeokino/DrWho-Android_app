<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="v1.localhost.drwho.activity.MainActivity">

        <ScrollView
            android:layout_width="368dp"
            android:layout_height="495dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btnSchedule"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="#48168a"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_event"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:id="@+id/btnAddAppointment"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignStart="@+id/btnEdit"
                    android:layout_alignTop="@+id/btnSchedule"
                    android:layout_marginRight="10dp"
                    android:background="#48168a"
                    app:srcCompat="@drawable/ic_add" />

                <ImageButton
                    android:id="@+id/btnProfile"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="#48168a"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_person_white_24dp"
                    android:layout_below="@+id/btnSchedule"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginRight="12dp"
                    android:background="#48168a"
                    app:srcCompat="@drawable/ic_edit"
                    android:layout_alignTop="@+id/btnProfile"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="26dp"
                    android:text="TEMP Seacrh Doctor"
                    android:layout_below="@+id/btnProfile"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>
        </ScrollView>
</android.support.constraint.ConstraintLayout>
