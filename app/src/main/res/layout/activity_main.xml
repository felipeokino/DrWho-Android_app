<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/cardLightPurple"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="v1.localhost.drwho.activity.Main">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/txtSpecs"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_above="@+id/btnAsc"
            android:layout_alignEnd="@+id/btnAsc"
            android:layout_alignStart="@+id/btnSincrono"
            android:layout_marginBottom="26dp" />

        <Button
            android:id="@+id/btnSincrono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="206dp"
            android:text="GET Doctor" />

        <Button
            android:id="@+id/btnAsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnSincrono"
            android:layout_marginStart="72dp"
            android:layout_toEndOf="@+id/btnSincrono"
            android:text="NÃ£o funciona" />

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/btnAsc"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnSincrono"
            android:layout_marginTop="50dp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnAsc"
            android:layout_alignStart="@+id/btnSincrono"
            android:layout_below="@+id/btnSincrono"
            android:layout_marginTop="25dp"
            android:text="Clear" />

        <TextView
            android:id="@+id/lbNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtNome"
            android:layout_marginTop="28dp"
            android:text="Name" />

        <TextView
            android:id="@+id/lblSpecs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtSpecs"
            android:layout_alignStart="@+id/txtSpecs"
            android:text="Specialization" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
