<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="v1.localhost.drwho.activity.CreateUser">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="25dp"
            android:text="Name"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtCpf"
            android:layout_alignBottom="@+id/edtCpf"
            android:layout_alignStart="@+id/tvName"
            android:text="CPF"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtAddress"
            android:layout_alignBottom="@+id/edtAddress"
            android:layout_alignStart="@+id/tvCpf"
            android:text="Address"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtBirthday"
            android:layout_alignBottom="@+id/edtBirthday"
            android:layout_alignEnd="@+id/tvAddress"
            android:text="Birthday"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignBaseline="@+id/tvName"
            android:layout_alignBottom="@+id/tvName"
            android:layout_alignStart="@+id/edtCpf" />

        <EditText
            android:id="@+id/edtCpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_below="@+id/edtName"
            android:layout_toEndOf="@+id/btnCancel"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_below="@+id/edtCpf"
            android:layout_alignStart="@+id/edtCpf" />

        <EditText
            android:id="@+id/edtBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_below="@+id/edtPhone"
            android:layout_alignStart="@+id/edtPhone" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:layout_below="@+id/edtAddress"
            android:layout_alignStart="@+id/edtAddress" />

        <TextView
            android:id="@+id/tcPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtPhone"
            android:layout_alignBottom="@+id/edtPhone"
            android:layout_alignStart="@+id/tvAddress"
            android:text="Phone"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvBirthday"
            android:layout_centerVertical="true"
            android:text="Email"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtPasswd"
            android:layout_alignBottom="@+id/edtPasswd"
            android:layout_alignStart="@+id/tcPhone"
            android:text="Password"
            android:textColor="#455A64"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/edtBirthday"
            android:layout_alignStart="@+id/edtBirthday" />

        <EditText
            android:id="@+id/edtPasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberPassword"
            android:layout_below="@+id/edtEmail"
            android:layout_alignStart="@+id/edtEmail" />


        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/edtPasswd"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="32dp"
            android:background="@color/colorPrimary"
            android:text="Done"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tvCpf"
            android:background="@color/colorPrimary"
            android:text="Cancel"
            android:textColor="@color/white" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
